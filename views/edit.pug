extends ./includes/layout.pug

block content
	section.container
		h1.header= title
		article.item
			form.form(method="post", action="/actualizar/" + data[0].id)
				input(type="hidden", name="_method", value="PUT")
				input(type="hidden", name="id", value=data[0].id)
				fieldset
					div
						input(type="text", class="form-control", name="name", placeholder="nombre", value=data[0].name, required)
					div
						input(type="text", class="form-control", name="twitter", placeholder="twitter", value=data[0].twitter, required)
					div
						input(type="text", class="form-control", name="country", placeholder="pais", value=data[0].country, required)
					div
						input(type="text", class="form-control", name="side", placeholder="equipo", value=data[0].side, required)
					div
						input.btn.btn-danger(type="submit", value="Editar")
		a.btn.btn-primary(href="/") Inicio